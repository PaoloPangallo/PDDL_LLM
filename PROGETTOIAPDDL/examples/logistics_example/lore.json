{
  "description": "Two packages must be loaded onto a truck in City1 and delivered to City2 by driving the truck between places.",
  "objects": [
    "city1 - city",
    "city2 - city",
    "loc1 - place",
    "loc2 - place",
    "loc3 - place",
    "loc4 - place",
    "pkg1 - package",
    "pkg2 - package",
    "truck1 - truck"
  ],
  "init": [
    "(in-city loc1 city1)",
    "(in-city loc2 city1)",
    "(at pkg1 loc1)",
    "(at pkg2 loc2)",
    "(at truck1 loc1)"
  ],
  "goal": [
    "(in pkg1 truck1)",
    "(in pkg2 truck1)"
  ],
  "branching": {
    "min": 1,
    "max": 2
  },
  "actions": [
    {
      "name": "load-truck",
      "parameters": [
        "?pkg - package",
        "?truck - truck",
        "?loc - place"
      ],
      "precondition": [
        "(at ?pkg ?loc)",
        "(at ?truck ?loc)"
      ],
      "effect": [
        "(in ?pkg ?truck)",
        "(not (at ?pkg ?loc))"
      ]
    },
    {
      "name": "drive-truck",
      "parameters": [
        "?truck - truck",
        "?from - place",
        "?to - place"
      ],
      "precondition": [
        "(at ?truck ?from)"
      ],
      "effect": [
        "(not (at ?truck ?from))",
        "(at ?truck ?to)"
      ]
    }
  ]
}
